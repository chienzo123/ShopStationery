@model BTL.Areas.Admin.Modal.TaiKhoan

@{
    ViewBag.Title = "Khóa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Khóa</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaTK)
        <h2>Bạn có chắc muỗn khóa/mở khóa tài khoản này?</h2>
        <div class="form-group">
         
            <div class="col-md-10">
                @Html.EditorFor(model => model.TaiKhoan1, new { htmlAttributes = new { @class = "form-control", @style="display: none"} })
                @Html.ValidationMessageFor(model => model.TaiKhoan1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           
            <div class="col-md-10">
                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control", @style = "display: none" } })
                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
         
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenNhanVien, new { htmlAttributes = new { @class = "form-control", @style = "display: none" } })
                @Html.ValidationMessageFor(model => model.TenNhanVien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
         
            <div class="col-md-10">
                @Html.EditorFor(model => model.Quyen, new { htmlAttributes = new { @class = "form-control", @style = "display: none" } })
                @Html.ValidationMessageFor(model => model.Quyen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
          
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Khoa, new { htmlAttributes = new { @class = "form-control", @style = "display: none" } })
                    @Html.ValidationMessageFor(model => model.Khoa, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Khóa/Mở khóa" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <button type="button" class="btn btn-outline-dark">@Html.ActionLink("Hủy", "Index")</button>
</div>


