@if (@Model.Count > 0)
{
    <div class="shoping__cart__table">
        <table>
            <thead>
                <tr>
                    <th>Mã Đơn Hàng</th>
                    <th>Tên</th>
                    <th>Điện Thoại</th>
                    <th>Địa Chỉ</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaDH</td>
                        <td> @item.TenNguoiNhan</td>
                        <td> @item.SDTNguoiNhan </td>
                        <td>@item.DiaChiNhan</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
            else
            {
                <p>Bạn chưa có đơn đặt hàng nào</p>
            }
