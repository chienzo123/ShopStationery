@model BTL.Models.DonHang

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="breadcrumb-section set-bg" style="background-color: #EC1C24;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>ĐƠN HÀNG</h2>
                        <div class="breadcrumb__option">
                            <a href="@Url.Action("Login","Home")">Home</a>
                            <span>ĐƠN HÀNG</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->
    <!-- Checkout Section Begin -->
    <section class="checkout spad">
        <div class="container">
            <div class="checkout__form">
                <h4>Chi tiết thanh toán</h4>
                <form action="#">
                    <div class="row">
                        <div class="col-lg-6 col-md-6">
                            <div class="checkout__input">
                                <div class="form-group">

                                    <div class="col-md-8">
                                        Tên Người Nhận
                                        @Html.EditorFor(model => model.TenNguoiNhan, new { htmlAttributes = new { @class = "form-control", Value = Session["TenKH"] } })
                                        @Html.ValidationMessageFor(model => model.TenNguoiNhan, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="checkout__input">
                                <div class="form-group">

                                    <div class="col-md-8">
                                        Số Điện Thoại
                                        @Html.EditorFor(model => model.SDTNguoiNhan, new { htmlAttributes = new { @class = "form-control", Value = Session["DienThoai"] } })
                                        @Html.ValidationMessageFor(model => model.SDTNguoiNhan, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="checkout__input">
                                <div class="form-group">
                                    <div class="col-md-8">
                                        Địa Chỉ
                                        @Html.EditorFor(model => model.DiaChiNhan, new { htmlAttributes = new { @class = "form-control" }, Value = Session["DiaChi"] })
                                        @Html.ValidationMessageFor(model => model.DiaChiNhan, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                            </div>
                            <div class="checkout__input">
                                <div class="form-group">

                                    <div class="col-md-8">
                                        Email
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", Value = Session["Email"] } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        @{ Html.RenderAction("_DatHang", "GioHang");}
                    </div>
                    <button type="submit" class="site-btn">TẠO ĐƠN</button>
                </form>
            </div>
        </div>
</div>
}
