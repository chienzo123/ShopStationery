
@{
    ViewBag.Title = "Oder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="breadcrumb-section set-bg" style="background-color: #EC1C24;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>ĐƠN HÀNG</h2>
                    <div class="breadcrumb__option">
                        <a href="@Url.Action("Login","Home")">Home</a>
                        <span>ĐƠN HÀNG</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h6>
                    <span class="icon_tag_alt"></span> Have a coupon? <a href="#">Click here</a> to enter your code
                </h6>
            </div>
        </div>
        <div class="checkout__form">
            <h4>Chi tiết thanh toán</h4>
            <form action="#">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Họ<span>*</span></p>
                                    <input type="text">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Tên<span>*</span></p>
                                    <input type="text">
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <p>Số điện thoại người mua<span>*</span></p>
                            <input type="text">
                        </div>
                        <div class="checkout__input">
                            <p>Địa chỉ<span>*</span></p>
                            <input type="text" placeholder="Thành Phố..." class="checkout__input__add">
                            
                        </div>
                        <div class="checkout__input">
                            <p>Quận<span>*</span></p>
                            <input type="text">
                        </div>
                        <div class="checkout__input">
                            <p>Huyện/Làng/Xã<span>*</span></p>
                            <input type="text">
                        </div>
                        <div class="checkout__input">
                            <p>ZIP<span>*</span></p>
                            <input type="text">
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Điện Thoại<span>*</span></p>
                                    <input type="text">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Email<span>*</span></p>
                                    <input type="text">
                                </div>
                            </div>
                        </div>
                        
                        
                        <div class="checkout__input__checkbox">
                            <label for="diff-acc">
                               Chuyển tới địa chỉ khác?
                                <input type="checkbox" id="diff-acc">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                        <div class="checkout__input">
                            <p>Địa chỉ mới:<span>*</span></p>
                            <input type="text"
                                   placeholder="Địa chỉ noi nhận hàng(Ghi rõ số nhà, tên đường)">
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4>Đơn hàng của bạn</h4>
                            <div class="checkout__order__products">Sản Phẩm <span>Thanh Toán</span></div>
                            <ul>
                                <li>Bút lông màu Fiber <span>$50.00</span></li>
                                <li>Sáp màu Colokit Doremon <span>$30.00</span></li>
                                <li>Ống mực Điểm 10 FPIC-02 <span>$20.00</span></li>
                            </ul>
                            <div class="checkout__order__subtotal">Tổng giá <span>$750.99</span></div>
                            <div class="checkout__order__total">Phải trả <span>$750.99</span></div>
                            <div class="checkout__input__checkbox">
                                <label for="acc-or">
                                   Thanh toán trực tiếp
                                    <input type="checkbox" id="acc-or">
                                    <span class="checkmark"></span>
                                </label>
                            </div>

                            
                            <div class="checkout__input__checkbox">
                                <label for="paypal">
                                    Chuyển khoản
                                    <input type="checkbox" id="paypal">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <button type="submit" class="site-btn">TẠO ĐƠN</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
