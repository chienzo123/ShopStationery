@model IEnumerable<BTL.Models.DanhMuc>

<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 d-lg-block d-none navigation-wrapper pr-0" style="background-color: white;">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>Danh sách sản phẩm</span>
                    </div>
                    <ul>
                        @*Danh sach cac danh muc lay tu csdl*@
                        <li class="cha1">
                            <a href="@Url.Action("Index","SanPhams", new { id= -1})">
                                <i class="fa fa-heart mr-2"></i>Tất cả sản phẩm
                            </a>                  
                        </li>
                        @foreach (var item in Model)
                        {
                            <li class="cha1">
                                <a href="@Url.Action("Index","SanPhams", new { id= item.MaDanhMuc})">
                                    <i class="fa fa-pencil mr-2"></i>@Html.DisplayFor(modelItem => item.TenDanhMuc)
                                </a>
                            </li>
                        }


                    </ul>
                </div>
            </div>
            @*Day la phan banner*@
            <div class="col-lg-9 col-12 pl-lg-0">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/wwwroot/images/1.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/wwwroot/images/2.png" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/wwwroot/images/3.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

